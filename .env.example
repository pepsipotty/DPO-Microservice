# Environment Variables for DPO Microservice
# Copy this file to .env and fill in the actual values

# ==========================================
# Firebase Configuration
# ==========================================
# Firebase service account key file path
# Used for Firebase Storage integration
FIREBASE_SERVICE_KEY_PATH=serviceKey.json

# Firebase storage bucket name
# Used in webhook_handler.py for file storage
FIREBASE_STORAGE_BUCKET=dpo-frontend.firebasestorage.app

# ==========================================
# Weights & Biases (WANDB) Configuration
# ==========================================
# WANDB API key for experiment tracking
# Get from https://wandb.ai/settings
WANDB_API_KEY=your_wandb_api_key_here

# WANDB entity/team name (optional)
# If not set, uses your personal account
WANDB_ENTITY=your_wandb_entity

# WANDB project name for organizing experiments
# Default is set in config/config.yaml
WANDB_PROJECT=direct-preference-optimization

# Disable WANDB entirely (set to "true" to disable)
# Useful for debugging or when WANDB is not available
WANDB_DISABLED=false

# WANDB cache directory
# Automatically set by train.py based on local_dirs
WANDB_CACHE_DIR=.cache

# ==========================================
# Model and Dataset Paths
# ==========================================
# Base directory for caching models and datasets
# Will try each directory in order from config.yaml local_dirs
CACHE_DIR=.cache

# Hugging Face cache directory
# Used for storing downloaded models and datasets
HF_HOME=.cache/huggingface

# Dataset file path for novalto dataset
# Expected by get_novalto_dataset() function
DATASET_PATH=data/dataset.json

# ==========================================
# Training Configuration
# ==========================================
# Master address for distributed training
# Usually set automatically by training scripts
MASTER_ADDR=localhost

# Master port for distributed training
# Usually set automatically by training scripts
MASTER_PORT=29500

# XDG cache home directory
# Set automatically by train.py
XDG_CACHE_HOME=.cache

# CUDA visible devices (for GPU training)
# Comma-separated list of GPU IDs to use
# CUDA_VISIBLE_DEVICES=0,1,2,3

# ==========================================
# Application Configuration
# ==========================================
# FastAPI application settings
# Host to bind the webhook handler
APP_HOST=0.0.0.0

# Port to bind the webhook handler
APP_PORT=8000

# Log level for the application
LOG_LEVEL=INFO

# ==========================================
# Development and Debugging
# ==========================================
# Python path for importing modules
# Usually not needed if running from project root
# PYTHONPATH=/path/to/DPO-Microservice

# Debug mode (disables some optimizations)
# Set to "true" for development
DEBUG=false